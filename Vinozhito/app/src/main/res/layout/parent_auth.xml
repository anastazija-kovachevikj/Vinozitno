<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyblue"
    android:columnCount="2"
    android:rowCount="1">

    <ImageButton
        android:id="@+id/close_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/close" />

    <TextView
        android:layout_width="555dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/text_background"
        android:gravity="center"
        android:paddingHorizontal="40dp"
        android:paddingVertical="5dp"
        android:text="@string/auth_title"
        android:textSize="15pt"
        android:textStyle="bold" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </Space>

    <LinearLayout
        android:layout_width="546dp"
        android:layout_height="227dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="15dp"
            android:columnCount="4"
            android:rowCount="2">

            <TextView
                android:id="@+id/number_input1"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/digits_background"
                android:gravity="center"
                android:maxLength="1"
                android:padding="0dp"
                android:tag="input1"
                android:text=""
                android:textSize="15pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number_input2"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/digits_background"
                android:gravity="center"
                android:maxLength="1"
                android:padding="0dp"
                android:tag="input2"
                android:text=""
                android:textSize="15pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number_input3"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/digits_background"
                android:gravity="center"
                android:maxLength="1"
                android:padding="0dp"
                android:tag="input3"
                android:text=""
                android:textSize="15pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number_input4"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/digits_background"
                android:gravity="center"
                android:maxLength="1"
                android:padding="0dp"
                android:tag="input4"
                android:text=""
                android:textSize="15pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number_text1"
                android:layout_width="80dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="БРОЈ"
                android:textSize="9pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number_text2"
                android:layout_width="80dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="БРОЈ"
                android:textSize="9pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number_text3"
                android:layout_width="80dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                    android:text="БРОЈ"
                android:textSize="9pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number_text4"
                android:layout_width="80dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="БРОЈ"
                android:textSize="9pt"
                android:textStyle="bold" />
        </GridLayout>

        <GridLayout
            android:id="@+id/number_pad_grid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:columnCount="3"
            android:rowCount="4">

            <Button
                android:id="@+id/button_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:background="@drawable/circle_shape"
                android:padding="0dp"
                android:text="1"
                android:textSize="13.5pt"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:background="@drawable/circle_shape"
                android:padding="0dp"
                android:text="2"
                android:textSize="13.5pt"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:background="@drawable/circle_shape"
                android:padding="0dp"
                android:text="3"
                android:textSize="13.5pt"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:background="@drawable/circle_shape"
                android:padding="0dp"
                android:text="4"
                android:textSize="13.5pt"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:background="@drawable/circle_shape"
                android:padding="0dp"
                android:text="5"
                android:textSize="13.5pt"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:background="@drawable/circle_shape"
                android:padding="0dp"
                android:text="6"
                android:textSize="13.5pt"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:background="@drawable/circle_shape"
                android:padding="0dp"
                android:text="7"
                android:textSize="13.5pt"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:background="@drawable/circle_shape"
                android:padding="0dp"
                android:text="8"
                android:textSize="13.5pt"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_9"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:background="@drawable/circle_shape"
                android:padding="0dp"
                android:text="9"
                android:textSize="13.5pt"
                android:textStyle="bold" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_0"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:background="@drawable/circle_shape"
                android:padding="0dp"
                android:text="0"
                android:textSize="13.5pt"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/button_clear"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="3dp"
                android:background="@drawable/clear1"
                android:padding="0dp" />

        </GridLayout>
    </LinearLayout>
</GridLayout>