<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/child_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyblue"
    android:columnCount="1"
    android:orientation="vertical"
    android:rowCount="3">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="1165dp"
        android:background="@null"
        android:contentDescription="@string/back"
        android:scaleType="centerInside"
        android:src="@drawable/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="TODO"
        android:paddingBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".screens.child.ChildActivity">

        <LinearLayout
            android:id="@+id/infiniteView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="0dp"
            android:background="@drawable/rb_background2"
            android:orientation="horizontal"
            android:scaleType="centerCrop">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:columnCount="6"
                android:rowCount="2"
                tools:ignore="UselessParent">

                <FrameLayout
                    android:layout_width="350dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center_vertical|top"
                    android:layout_marginStart="0dp">

                    <View
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center|bottom"
                        android:background="@drawable/circle_shape" />

                    <ImageButton
                        android:id="@+id/communication_btn"
                        android:layout_width="230dp"
                        android:layout_height="231dp"
                        android:layout_gravity="center|bottom"
                        android:layout_marginStart="18dp"
                        android:layout_marginBottom="-3dp"
                        android:background="@null"
                        android:contentDescription="@string/todo_text"
                        android:scaleType="centerInside"
                        android:src="@drawable/speak" />
                </FrameLayout>

