<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/com_bg"/>
        </shape>
    </item>

    <!-- Border with adjusted position to show the stroke -->
    <item android:left="0dp" android:right="-2dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2.5dp"
                android:color="@color/com_stroke" />

        </shape>
    </item>

</layer-list>
