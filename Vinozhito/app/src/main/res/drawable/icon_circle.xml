<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <solid android:color="#FFFFFF" />

    <!-- Stroke for circle border -->
    <stroke
        android:width="5dp"
        android:color="@color/ashy_white" />

    <!-- Optional: You can define size here if not set in the layout -->
    <size
        android:width="40dp"
        android:height="40dp" />

</shape>
