<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Layer for rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <corners android:bottomRightRadius="30dp" android:bottomLeftRadius="30dp" />
        </shape>
    </item>

    <!-- Layer for the image -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <bitmap
            android:src="@drawable/rb_background2"
        android:gravity="fill"
            />
    </item>
</layer-list>
