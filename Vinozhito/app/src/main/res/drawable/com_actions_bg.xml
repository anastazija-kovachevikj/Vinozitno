<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/com_bg"/>
            <corners android:topLeftRadius="20dp" android:topRightRadius="20dp"/> <!-- Rounded left corners -->
        </shape>
    </item>

    <!-- Border with adjusted position to show the stroke -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="-2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2.5dp"
                android:color="@color/com_stroke" />
            <corners android:topLeftRadius="20dp" android:topRightRadius="20dp" /> <!-- Apply rounded corners to border -->
        </shape>
    </item>

</layer-list>
